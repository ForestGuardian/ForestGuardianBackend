<h2>Sign up</h2>

<div class="well col-lg-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">@</span>
        <%= f.email_field :email, autofocus: true, placeholder: 'email', class:'form-control', 'aria-describedby':"basic-addon1" %>
      </div>

      <div class="input-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, placeholder: 'password',autocomplete: "off", class:'form-control' %>
      </div>

      <div class="input-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, placeholder: 'password again',autocomplete: "off", class:'form-control'%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:'btn btn-default' %>
      </div>
    <% end %>

  <%= render "users/shared/links" %>

</div>